@model AppData.Models.ChatLieu

@{
    Layout = "~/Views/Shared/_LayoutForAdmin.cshtml";
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    ViewData["Title"] = "Create";
    AppData.Models.AssignmentDBContext dBContext = new AppData.Models.AssignmentDBContext();
}

<h4>Thêm mới chất liệu</h4>
<hr />
<div>
    <a asp-action="Show" class="btn btn-primary mb-2"><i class="bi bi-caret-left-fill"></i>Quay Lại</a>
</div>
<div class="row">
    <div class="col-md-4">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }
        <form asp-action="Create" id="createForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Ten" class="control-label">Tên</label>

                <input asp-for="Ten" class="form-control" autocomplete="off" id="TenInput" />

                <div class="invalid-feedback">
                    Tên chất liệu không được bỏ trống!
                </div>
            </div>

            <input type="hidden" asp-for="TrangThai" value="1" />

            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" style="margin-top: 10px" />
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        // 1. Khi người dùng bắt đầu gõ, xóa trạng thái lỗi
        $("#TenInput").on("input", function () {
            $(this).removeClass("is-invalid");
        });

        // 2. Khi nhấn nút Lưu
        $("#createForm").submit(function (e) {
            var tenInput = $("#TenInput");
            var tenValue = tenInput.val();

            // Kiểm tra nếu ô nhập trống hoặc chỉ chứa khoảng trắng
            if (tenValue.trim() === "") {
                tenInput.addClass("is-invalid"); // Thêm class này để hiện dòng chữ đỏ
                e.preventDefault(); // Chặn không cho form gửi đi
                return false;
            }

            return true;
        });
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}