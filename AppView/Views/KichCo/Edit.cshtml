@model AppData.Models.KichCo

@{
    ViewData["Title"] = "Edit";
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css">
}

<h1>Chỉnh sửa kích cỡ</h1>
<hr />
<div>
    <a asp-action="Show" class="btn btn-primary mb-2"><i class="bi bi-caret-left-fill"></i>Quay Lại</a>
</div>
<div class="row">
    <div class="col-md-4">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }
        <form asp-action="Edit" id="editForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group" hidden>
                <label asp-for="ID" class="control-label"></label>
                <input type="hidden" asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ten" class="control-label">Tên</label>
                <input asp-for="Ten" class="form-control" id="TenInput" autocomplete="off" />

                <div class="invalid-feedback">
                    Tên kích cỡ không được bỏ trống!
                </div>
            </div>

            <input type="hidden" asp-for="TrangThai" value="1" />

            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" style="margin-top: 10px" />
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Khi người dùng nhập liệu, xóa class lỗi đi để ẩn dòng chữ đỏ
        $("#TenInput").on("input", function () {
            $(this).removeClass("is-invalid");
        });

        // Xử lý khi bấm nút Lưu
        $("#editForm").submit(function (e) {
            var tenInput = $("#TenInput");
            var tenValue = tenInput.val();

            // Kiểm tra nếu rỗng
            if (tenValue.trim() === "") {
                // Thêm class is-invalid -> Bootstrap sẽ tự động hiện thẻ div invalid-feedback bên dưới
                tenInput.addClass("is-invalid");

                // Ngăn không cho form submit
                e.preventDefault();
                return false;
            }

            return true;
        });
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}