@model AppData.Models.MauSac

@{
    ViewData["Title"] = "Create";
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css">
}

<h1>Thêm mới màu sắc</h1>

<hr />
<div>
    <a asp-action="Show" class="btn btn-primary mb-2"><i class="bi bi-caret-left-fill"></i>Quay Lại</a>
</div>
<div class="row">
    <div class="col-md-4">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }
        <form asp-action="Create" id="createForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group" hidden>
                <input asp-for="ID" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Ten" class="control-label">Tên</label>
                <input asp-for="Ten" class="form-control" autocomplete="off" id="TenInput" />
                <div class="invalid-feedback">Vui lòng nhập tên màu sắc!</div>
            </div>

            <div class="form-group">
                <label asp-for="Ma" class="control-label">Mã</label>
                <input asp-for="Ma" type="color" class="form-control" id="MaInput" />
                <div class="invalid-feedback">Vui lòng chọn mã màu sắc!</div>
            </div>

            <div class="form-group" hidden>
                <input asp-for="TrangThai" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="margin-top: 10px" />
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Khi người dùng bắt đầu nhập lại, xóa lỗi đi
        $("#TenInput").on("input", function () {
            $(this).removeClass("is-invalid");
        });

        $("#MaInput").on("input", function () {
            $(this).removeClass("is-invalid");
        });

        // Xử lý khi bấm nút Submit
        $("#createForm").submit(function (e) {
            var isValid = true; // Biến cờ để kiểm tra

            var tenInput = $("#TenInput");
            var maInput = $("#MaInput");

            // Validate Tên
            if (tenInput.val().trim() === "") {
                tenInput.addClass("is-invalid"); // Class này sẽ kích hoạt div invalid-feedback hiện lên
                isValid = false;
            }

            // Validate Mã
            // Lưu ý: input type="color" luôn có giá trị mặc định, điều kiện này chỉ chạy nếu bạn đổi sang type="text"
            if (maInput.val().trim() === "") {
                maInput.addClass("is-invalid");
                isValid = false;
            }

            // Nếu có lỗi thì chặn submit form
            if (!isValid) {
                e.preventDefault(); // Chặn form gửi đi
                return false;
            }

            return true;
        });
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}